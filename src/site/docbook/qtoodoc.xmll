  status character varying(80),
  indication character varying(400),
  phase character varying(15),
  center character varying(20),
  starttime timestamp without time zone,
  amendment timestamp without time zone,
  primarytarget character varying(2000),
  secondarytarget character varying(2000),
  version integer,
  studynumber character varying(40),
  stand timestamp without time zone,
  expansion character varying(20),
  dkrnumber character varying(4),
  enddate timestamp without time zone,
  intention character varying(40),
  amendmentnr integer,
  infodate timestamp without time zone,
  starttext character varying(80),
  infostatus character varying(80) NOT NULL DEFAULT 'work',
  longname character varying(1000),
  randomized character varying(1),
  prospective character varying(1),
  protocolvar character varying(100) NOT NULL DEFAULT '',
  isrctn character varying(20),
  protocoltype character varying(10),
  CONSTRAINT protocol_pkey PRIMARY KEY (idprotocol ),
  CONSTRAINT idprotocol FOREIGN KEY (idprotocol)
      REFERENCES tree (id) MATCH SIMPLE
      ON UPDATE CASCADE ON DELETE CASCADE,
  CONSTRAINT unqprotocol UNIQUE (protocol , protocolvar ),
  CONSTRAINT center_check CHECK (center  = 'uni' OR center = 'multi' OR center = 'oligo' 
  	OR center IS NULL),
  CONSTRAINT expansion_check CHECK (expansion = 'national' OR expansion = 'international'
  	 OR expansion = 'european' OR expansion = 'europeanDACH' OR expansion IS NULL),
  CONSTRAINT infostatus_check CHECK (infostatus = 'test' OR infostatus = 'work' 
  	OR infostatus = 'submitted' OR infostatus = 'submitted1' OR infostatus = 'ok' 
  		OR infostatus = 'old' OR infostatus IS NULL),
  CONSTRAINT phase_check CHECK (phase = 'i' OR phase = 'ii' OR phase = 'iii' 
  	OR phase = 'iv' OR phase = 'i-ii' OR phase = 'ii-iii' OR phase IS NULL),
  CONSTRAINT prospective_check CHECK (prospective = 'y' OR prospective = 'n' 
  	OR prospective IS NULL),
  CONSTRAINT protocoltype_check CHECK (protocoltype = 'patient' 
  	OR protocoltype = 'clinic' OR protocoltype = 'study' OR protocoltype = 'guideline' 
  	OR protocoltype = 'tubo' OR protocoltype = 'path'),
  CONSTRAINT randomized_check CHECK (randomized = 'y' OR randomized = 'n' 
  	OR randomized IS NULL),
  CONSTRAINT status_check CHECK (status = 'aktiv' OR status = 'inaktiv' 
  	OR status = 'prep' OR status IS NULL)
)
			</programlisting>
